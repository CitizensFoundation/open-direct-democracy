<h1>Editing document_state</h1>

<% form_for(@document_state) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @document_state %> |
<%= link_to 'Back', document_states_path %>
